<script>
  import wepy from 'wepy'
  import {req} from '../../util/util'

  export default class ActDetail extends wepy.page {
    data = {
      actInfo: '',
      id: ''
    }
    methods = {
      join() {
        let id = this.id
        req({
          url: '/mp/join',
          showLoading: false,
          data: {
            act: id
          }
        }).then(res => {
          if (res.data.ret_code === 0) {
            wx.showModal({
              title: '',
              content: '参与成功，请等待开奖',
              showCancel: false,
              success: res => {
                if (res.confirm) {
                  wx.reLaunch({
                    url: 'index'
                  })
                }
              }
            })
          }
        })
      }
    }
    onLoad(option) {
      let that = this
      that.id = option.id
      req({
        url: '/mp/act/' + option.id,
        showLoading: true
      }).then(res => {
        console.log(res)
        that.actInfo = res.data.ret_data
        that.$apply()
      })
    }
  }
</script>
