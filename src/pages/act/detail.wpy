<template>
  <view class="container">
    <view class="gift-image">
      <image src="{{actInfo.gift.url}}"></image>
    </view>
    <view class="act">
      <view class="act-name">
        {{actInfo.title}}
      </view>
      <view class="act-create">
        {{actInfo.user.name}}
      </view>
    </view>
    <view class="gift">
      <view class="gift-name">
        {{actInfo.gift.name}} (礼物数量：{{actInfo.people.gift}})
      </view>
      <view class="gift-desc">
        {{actInfo.gift.desc}}
      </view>
    </view>
    <view class="desc">
      {{actInfo.desc}}
    </view>
    <view class="footer">
      <view class="footer-number">
        <p>当前人数: {{actInfo.people.now}}</p>
        <p>最大人数: {{actInfo.people.max}}</p>
      </view>
      <view class="footer-button" @tap="join">
        <span>立即参与</span>
      </view>
    </view>
  </view>
</template>
<style lang="less">
  page {
    background: #fff;
  }
  .gift-image {
    image {
      width: 100%;
      height: 500rpx;
    }
    border-bottom: 1px whitesmoke solid;
  }
  .act {
    margin-top: 30rpx;
    display: flex;
    align-content: center;
    justify-content: space-between;
