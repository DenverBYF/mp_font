    font-size: 34rpx;
    &-name {
      font-weight: bold;
    }
    border-bottom: 1px whitesmoke solid;
  }
  .gift {
    margin-top: 30rpx;
    padding: 5rpx 48rpx;
    &-name {
      font-size: 34rpx;
      font-weight: bold;
    }
    &-desc {
      margin-top: 8rpx;
      font-size: 28rpx;
      margin-bottom: 8rpx;
    }
    border-bottom: 1px whitesmoke solid;
  }
  .desc {
    margin-top: 30rpx;
    padding: 5rpx 48rpx;
    font-size: 28rpx;
  }
  .footer {
    position: fixed;
    bottom: 0;
    height: 90rpx;
    width: 100%;
